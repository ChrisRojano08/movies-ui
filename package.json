{
  "name": "perla_negra",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "bootstrap-icons": "^1.10.5",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-bootstrap-typeahead": "^6.2.3",
    "react-dom": "^18.2.0",
    "react-player": "^2.12.0",
    "react-router": "6.14.2",
    "react-router-dom": "5.3.0",
    "sweetalert2": "^11.7.20",
    "web-vitals": "^3.4.0",
    "yarn": "^1.22.19"
  },
  "resolutions": {
    "react-error-overlay": "6.0.9"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "react-start": "react-scripts start",
    "electron-start": "electron .",
    "start": "concurrently -k \"yarn react-start\" \"wait-on http://127.0.0.1:3000/ && yarn electron-start\"",
    "electron:build": "yarn build && electron-builder -c.extraMetadata.main=build/main.js --windows"
  },
  "build": {
    "productName": "PerlaNegra",
    "extends": null,
    "appId": "com.example.electron-cra",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "public/logo512.png"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.3.2",
    "electron-builder": "^24.6.3",
    "react-error-overlay": "6.0.9",
    "react-scripts": "5.0.1",
    "wait-on": "^7.0.1"
  }
}
